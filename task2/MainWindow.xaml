<Window x:Class="task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="btnStartProgress" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Update_ProgressBar" >Прогресс бар</Button>
        <Button x:Name="btnHighPriority" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Click="HighPriority" >Приоритет</Button>
        <Button Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Click="UpdateThread" >Продемонстрировать ошибку</Button>

        <TextBlock x:Name="txtLog" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center" ></TextBlock>
        
        <ProgressBar x:Name="progressValue" Grid.Row="2" Grid.ColumnSpan="3" Margin="10"></ProgressBar>
        <TextBlock x:Name="progressText" Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="0" Text="0%"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
